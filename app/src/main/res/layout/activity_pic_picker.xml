<?xml version="1.0" encoding="utf-8"?><!--支持单选、多选的本地相册-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_f8">

    <com.lrpshuai.picpicker.weight.ToolbarView
        android:id="@+id/tb_pp_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:right_text_button="确定"
        app:titleText="选择照片" />

    <LinearLayout
        android:id="@+id/llt_pp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_pp_top"
        android:orientation="vertical"
        android:visibility="gone">

        <GridView
            android:id="@+id/gv_pp_photos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:verticalSpacing="5dp" />

        <LinearLayout
            android:id="@+id/llt_pp_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pp_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/icon_pop"
                android:gravity="center_vertical"
                android:padding="13dp"
                android:text="最近照片"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/txt_size_30" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/v_pp_line"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_ffffff" />

            <TextView
                android:id="@+id/tv_pp_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:padding="13dp"
                android:text="预览"
                android:textColor="@color/color_dddddd"
                android:textSize="@dimen/txt_size_30" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_pp_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_pp_top"
        android:background="@color/color_40000000" />

    <include
        layout="@layout/state_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>