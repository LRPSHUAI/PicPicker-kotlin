<?xml version="1.0" encoding="utf-8"?><!--相册列表-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_app_img"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_default"/>

    <ImageView
        android:id="@+id/iv_app_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:src="@mipmap/btn_picker_normal" />

    <ImageView
        android:id="@+id/iv_app_selected"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:src="@color/color_40000000"/>

</RelativeLayout>